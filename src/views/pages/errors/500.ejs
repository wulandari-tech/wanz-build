<div class="container text-center mt-5 pt-5">
    <h1 class="display-1"><%= statusCode %></h1>
    <h2 class="mb-4">Internal Server Error</h2>
    <p class="lead mb-4">
        Oops! Something went wrong on our end. We are working to fix it.
    </p>
    <% if (locals.message) { %>
        <p class="text-muted"><%= message %></p>
    <% } %>
    <a href="/" class="btn btn-primary btn-lg">Go to Homepage</a>
    <% if (process.env.NODE_ENV === 'production' && locals.stack) { %>
        <div class="mt-5 text-start">
            <h4>Stack Trace (Development Mode):</h4>
            <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; max-height: 300px; overflow-y: auto;"><code><%= stack %></code></pre>
        </div>
    <% } %>
</div>