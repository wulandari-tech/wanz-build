<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="card shadow-sm card-form">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center mb-4 fw-bold">
                        <i class="fas fa-sign-in-alt me-2"></i>Login to WanzOFC
                    </h2>
                    <%- include('../../partials/messages') %>
                    <form action="/auth/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="you@example.com" value="<%= typeof email != 'undefined' ? email : '' %>" required autofocus>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Enter Password" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>
                    <p class="mt-4 text-center">
                        Don't have an account? <a href="/auth/register">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>