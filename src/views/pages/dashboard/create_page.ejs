<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2 class="h4 mb-0"><i class="far fa-file-alt me-2"></i>Create New Page for <%= website.name %></h2>
                </div>
                <div class="card-body p-4">
                    <%- include('../../partials/messages') %>
                    <form action="/dashboard/websites/<%= website._id %>/pages" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Page Name</label>
                            <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="e.g., About Us, Contact" required autofocus>
                            <div class="form-text">This name will be used for navigation and to generate the page URL (e.g., /about-us).</div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a href="/dashboard/websites/<%= website._id %>/edit" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Create Page
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>