<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0"><i class="fas fa-plus-circle me-2"></i>Create a New Website</h2>
                </div>
                <div class="card-body p-4">
                    <%- include('../../partials/messages') %>
                    <form action="/dashboard/websites" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Website Name</label>
                            <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="My Awesome Project" required autofocus>
                            <div class="form-text">This name will also be used to generate an initial URL (slug) for your site.</div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a href="/dashboard" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Create Website
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>