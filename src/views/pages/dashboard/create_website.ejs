<%# src/views/pages/dashboard/create_website.ejs %>
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0"><i class="fas fa-plus-circle me-2"></i>Create a New Website</h2>
                </div>
                <div class="card-body p-4">
                    <%- include('../../partials/messages') %>
                    <form action="/dashboard/websites" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Website Name</label>
                            <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="My Awesome Project" required autofocus>
                            <div class="form-text">This will be your site's title and used to suggest a subdomain.</div>
                        </div>

                        <div class="mb-4">
                            <label for="desiredSubdomain" class="form-label">Desired Subdomain Prefix</label>
                             <div class="input-group input-group-lg">
                                <input type="text" class="form-control" id="desiredSubdomain" name="desiredSubdomain" placeholder="e.g., myproject (optional)">
                                <span class="input-group-text">.<%= appHostname %></span>
                            </div>
                            <div class="form-text">
                                Optional. If left blank, a subdomain will be generated from your website name.
                                Use only letters, numbers, and hyphens.
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a href="/dashboard" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-rocket me-2"></i>Create & Launch Starter Site
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>