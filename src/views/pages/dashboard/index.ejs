<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h1 class="h2"><i class="fas fa-sitemap me-2"></i>My Websites</h1>
        <a href="/dashboard/websites/new" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Create New Website
        </a>
    </div>

    <% if(websites.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% websites.forEach(function(website) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm card-dashboard">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= website.name %></h5>
                            <p class="card-text text-muted small">
                                Slug: <span class="fw-bold"><%= website.slug %></span>
                            </p>
                            <div class="mt-auto">
                                <% if (website.isPublished) { %>
                                    <span class="badge bg-success me-2"><i class="fas fa-globe me-1"></i>Published</span>
                                    <a href="/s/<%= website.slug %>" target="_blank" class="btn btn-outline-secondary btn-sm site-preview-link">
                                        <i class="fas fa-external-link-alt me-1"></i>View Site
                                    </a>
                                <% } else { %>
                                    <span class="badge bg-secondary me-2"><i class="fas fa-eye-slash me-1"></i>Draft</span>
                                <% } %>
                                <a href="/dashboard/websites/<%= website._id %>/edit" class="btn btn-info btn-sm float-end">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <p class="lead">You haven't created any websites yet.</p>
            <a href="/dashboard/websites/new" class="btn btn-lg btn-primary mt-2">
                <i class="fas fa-magic me-2"></i>Start Your First Website
            </a>
        </div>
    <% } %>
</div>